  "workspaces": [
    "packages/**",
    "integration/**"
  ],
  "scripts": {
    "start": "wireit",
    "prepare": "husky"
  },
  "wireit": {
    "start": {
      "command": "browser-sync start --server --files \"**/target/**\" \"**/*.html\"",
      "service": true,
      "dependencies": [
        {
          "script": "integration",
          "cascade": false
        }
      ]
    },
    "integration": {
      "dependencies": [
        "./integration/counter:build",
        "./integration/hacker-news:build",
        "./integration/todo:build"
      ]
    }
  },
  "devDependencies": {
    "@open-wc/testing": "^4.0.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "^20.1.1",
    "@web/test-runner": "^0.18.0",
    "@web/test-runner-playwright": "^0.11.0",
    "ava": "^6.0.0",
    "chai": "^5.1.1",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "tslib": "2.6.3",
    "typescript": "^5.3.0",
    "vite": "^5.3.5",
    "wireit": "^0.14.0"
  },
  "lint-staged": {
    "*.{js,ts,css,md}": "prettier --write"
  }
}
