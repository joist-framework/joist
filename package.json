{
  "name": "lit-kit",
  "version": "0.0.0",
  "description": "A set of packages that leverage lit-html to help you write applications with web components",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/deebloo/lit-kit.git"
  },
  "author": "deebloo",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/deebloo/lit-kit/issues"
  },
  "scripts": {
    "install": "npm run build-libs",
    "build-libs": "lerna run build --scope @lit-kit/*"
  },
  "dependencies": {
    "@lit-kit/component": "file:packages/component",
    "@lit-kit/di": "file:packages/di",
    "@lit-kit/router": "file:packages/router",
    "@lit-kit/schematics": "file:packages/schematics"
  },
  "devDependencies": {
    "@angular-devkit/core": "9.1.1",
    "@angular-devkit/schematics": "9.1.1",
    "@commitlint/cli": "8.3.5",
    "@commitlint/config-conventional": "8.3.4",
    "@types/jasmine": "3.5.10",
    "@types/node": "8.10.60",
    "@webcomponents/webcomponentsjs": "2.4.3",
    "clean-webpack-plugin": "3.0.0",
    "compression-webpack-plugin": "3.1.0",
    "copy-webpack-plugin": "5.1.1",
    "html-webpack-plugin": "4.2.0",
    "husky": "4.2.5",
    "jasmine": "3.5.0",
    "jasmine-core": "3.5.0",
    "karma": "5.0.2",
    "karma-chrome-launcher": "3.1.0",
    "karma-cli": "2.0.0",
    "karma-jasmine": "3.1.1",
    "karma-spec-reporter": "0.0.32",
    "karma-webpack": "4.0.2",
    "lerna": "3.20.2",
    "lint-staged": "10.1.6",
    "lit-html": "1.2.1",
    "path-to-regexp": "6.1.0",
    "prettier": "2.0.4",
    "puppeteer": "2.1.0",
    "ts-loader": "7.0.1",
    "ts-node": "8.8.2",
    "typescript": "3.8.3",
    "webpack": "4.42.1",
    "webpack-cli": "3.3.11",
    "webpack-dev-server": "3.10.2",
    "workbox-webpack-plugin": "5.1.2"
  },
  "lint-staged": {
    "*.{js,ts,json,css,md,html}": [
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  }
}
